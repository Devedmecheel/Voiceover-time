<html lang="ar">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>حساب مدة الصوت</title>
  <!-- استدعاء Bootstrap CSS من شبكة CDN -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* تنسيق بسيط لتحسين العرض */
    body {
      background-color: #f8f9fa;
    }
    .container {
      margin-top: 50px;
    }
  </style>
</head>
<body dir="rtl">
  <div class="container">
    <h1 class="text-center mb-4">حساب مدة الصوت</h1>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="form-group">
          <label for="inputText">النص:</label>
          <textarea class="form-control" id="inputText" rows="5" placeholder="أدخل النص هنا..."></textarea>
        </div>
        <button id="calculateButton" class="btn btn-success btn-block">احسب المدة</button>
        <div class="mt-3">
          <h4 id="result" class="text-center">النتيجة ستظهر هنا.</h4>
        </div>
      </div>
    </div>
  </div>
  
  <!-- استدعاء Bootstrap JS والاعتماديات (jQuery و Popper.js) من شبكة CDN -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  
  <!-- الكود الخاص بحساب مدة الصوت -->
  <script>
    // دالة لحساب مدة الصوت بناءً على عدد الكلمات
    function calculateAudioDuration(text, wordsPerMinute = 85) {
      // إزالة الفراغات الزائدة وتقسيم النص إلى كلمات
      let words = text.trim().split(/\s+/).filter(word => word.trim() !== "");
      let wordCount = words.length;
      
      // حساب إجمالي الثواني
      let totalSeconds = (wordCount / wordsPerMinute) * 60;
      let minutes = Math.floor(totalSeconds / 60);
      let seconds = (totalSeconds % 60).toFixed(1);
      
      // صياغة النتيجة باللغة العربية
      if (minutes === 0) {
        return seconds + " ثانية";
      } else {
        return minutes + " دقيقة و" + seconds + " ثانية";
      }
    }
    
    // التعامل مع حدث النقر على زر "احسب المدة"
    document.getElementById("calculateButton").addEventListener("click", function() {
      let inputText = document.getElementById("inputText").value;
      let resultDiv = document.getElementById("result");
      
      if (inputText.trim() === "") {
        resultDiv.textContent = "من فضلك أدخل نصاً للحساب.";
      } else {
        let result = calculateAudioDuration(inputText);
        resultDiv.textContent = "مدة الصوت: " + result;
      }
    });
  </script>
</body>
</html>
